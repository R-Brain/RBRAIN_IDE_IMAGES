disable_symlinks off;

server {
    listen 8080;
    
    # redirect to ride
    location = / {
      proxy_pass http://127.0.0.1:8888;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "upgrade";
      # increased the idle timeout to 30min (default: 60s)
      proxy_read_timeout 1800s;
    }
    
    # proxy for general paths
    # proxy url: http://reachable-host/p1234/any/resource
    # internal url: http://127.0.0.1:1234/any/resource
    location ~* /rstudio$ {
      proxy_pass http://127.0.0.1:8888;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "upgrade";
      # increased the idle timeout to 30min (default: 60s)
      proxy_read_timeout 1800s;
      proxy_send_timeout 1800s;
      client_max_body_size 0;
   }
    
    location ~* /p(?<port>\d+)/((?<path>(doc|library).*))?$ {
      proxy_pass http://127.0.0.1:$port/$path$is_args$args;
      # [help] Search help pages have broken link #362
      subs_filter '(.*)="/doc/' '$1="../../doc/' gr;
      subs_filter '<a href="/doc/' '<a href="../../doc/' gr;
      # [help] Iframe History track #415
      subs_filter '</head>' '<script type="text/javascript">if(window.parent) { window.parent.postMessage({"location":  location.toString() }, "*") }</script></head>' g;
      client_max_body_size 0;
    }
        
    # proxy for general paths
    # proxy url: http://reachable-host/p1234/any/resource
    # internal url: http://127.0.0.1:1234/any/resource
    location ~* /p(?<port>\d+)/(?<path>.*)?$ {
      proxy_pass http://127.0.0.1:$port/$path$is_args$args;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "upgrade";
      # increased the idle timeout to 30min (default: 60s)
      proxy_read_timeout 1800s;
      proxy_send_timeout 1800s;
      client_max_body_size 0;
   }
   
   # forward all other requests to 8888
   location ~* /\D\D\D.*?$ {
      proxy_pass http://127.0.0.1:8888;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "upgrade";
      # increased the idle timeout to 30min (default: 60s)
      proxy_read_timeout 1800s;
      proxy_send_timeout 1800s;
      client_max_body_size 0;
   }
    
}
